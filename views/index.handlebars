<div class="container">




    <div>
        <h1> Burger Tracker</h1>
    </div>


    <div class="row">

        <div>
            <h3> Eat. </h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
                 <button class="delete-button" data-id="{{id}}">delete</button>

        </div>

        <div>
            <h3> Ate. </h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
            <button class="devour-button" data-id="{{id}}">Devour</button>
        </div>

            <div>
                <form class="create-form">
                    <div class="form-group">
                        <h2 class="heading"><label for="burg"> Add. !</label></h2>
                        <br>
                        <input type="text" id="burg" name="name">
                    </div>
                    <button class="add-button" type="submit" id="burgerer">
                        Submit
                    </button>

                </form>
            </div>



    


    </div>